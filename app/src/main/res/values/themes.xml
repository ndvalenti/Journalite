<resources>
    <!-- Base application theme. -->
    <style name="Theme.Journalite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/journalite_primary</item>
        <item name="colorPrimaryVariant">@color/journalite_primaryvariant</item>
        <item name="colorOnPrimary">@color/journalite_onprimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/journalite_secondary</item>
        <item name="colorSecondaryVariant">@color/journalite_secondaryvariant</item>
        <item name="colorOnSecondary">@color/journalite_onsecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/journalite_primary</item>

        <item name="android:windowBackground">@color/journalite_primary</item>
    </style>

    <style name="Theme.Journalite.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Journalite.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Journalite.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>